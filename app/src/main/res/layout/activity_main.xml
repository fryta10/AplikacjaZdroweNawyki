<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aktywnosci.MainActivity">

    <!-- G贸wny ukad aplikacji -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />
        />

        <TextView
            android:id="@+id/textView_wybrana_data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:textSize="18sp"
            android:text="05-03-2025"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@color/white"
            android:elevation="4dp"/>



        <LinearLayout
            android:id="@+id/navigation_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/textView_wybrana_data2"
            android:padding="4dp"
            android:weightSum="3"
            android:background="?attr/colorPrimaryDark">

            <Button
                android:id="@+id/btn_wczoraj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wczoraj"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:maxLines="1"
                android:ellipsize="none"/>
            <Button
                android:id="@+id/btn_dzisiaj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dzisiaj"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:maxLines="1"
                android:ellipsize="none"/>


            <Button
                android:id="@+id/btn_jutro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jutro"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:maxLines="1"
                android:ellipsize="none"/>

            <ImageButton
                android:id="@+id/btn_kalendarz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Wybierz dat z kalendarza" />
        </LinearLayout>
        <!-- Tre g贸wnego ekranu -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_status_layout"
            android:layout_below="@id/navigation_buttons">

        <!-- ScrollView z sekcjami posik贸w -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sekcja niadanie -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nazwa_sniadanie"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" niadanie"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_kcal_Sniadanie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 kcal"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <ImageButton
                                android:id="@+id/btn_dodaj_sniadanie"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Dodaj produkt"
                                android:minWidth="48dp"
                                android:minHeight="48dp"
                                android:src="@android:drawable/ic_input_add" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_B_Sniadanie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 B"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_T_Sniadanie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 T"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_W_Sniadanie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 W"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewSniadanie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp"></androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <!-- Sekcja Obiad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nazwa_obiad"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" Obiad"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_kcal_Obiad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 kcal"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <ImageButton
                                android:id="@+id/btn_dodaj_obiad"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Dodaj produkt"
                                android:minWidth="48dp"
                                android:minHeight="48dp"
                                android:src="@android:drawable/ic_input_add" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_B_Obiad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 B"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_T_Obiad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 T"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_W_Obiad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 W"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewObiad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <!-- Sekcja Przekska -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nazwa_przekaska"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" Przekska"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_kcal_Przekaska"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 kcal"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <ImageButton
                                android:id="@+id/btn_dodaj_przekaska"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Dodaj produkt"
                                 android:minWidth="48dp"
                                android:minHeight="48dp"
                                android:src="@android:drawable/ic_input_add" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_B_Przekaska"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 B"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_T_Przekaska"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 T"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_W_Przekaska"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 W"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPrzekaska"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp"></androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <!-- Sekcja Kolacja -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nazwa_kolacja"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" Kolacja"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_kcal_Kolacja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 kcal"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <ImageButton
                                android:id="@+id/btn_dodaj_kolacja"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Dodaj produkt"
                                android:minWidth="48dp"
                                android:minHeight="48dp"
                                android:src="@android:drawable/ic_input_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_B_Kolacja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 B"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_T_Kolacja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 T"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_W_Kolacja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="78dp"
                                android:text="0 W"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewKolacja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp"></androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
        <!-- Nowy pasek postpu na dole ekranu -->
        <LinearLayout
            android:id="@+id/bottom_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorPrimary"
            android:padding="6dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:fitsSystemWindows="true">

            <!-- Tytu Sekcji -->
            <TextView
                android:id="@+id/tv_progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twoje dzienne spo偶ycie"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="4dp"/>

            <!-- Kontener na paski postpu dla ka偶dego skadnika -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:weightSum="4"> <!-- Zapewnia r贸wny podzia -->

                <!-- Panel kalorii -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp"
                    android:background="@android:color/white"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/tvkalorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Kalorie"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_spozyte_kalorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <ProgressBar
                        android:id="@+id/progress_kalorie"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/holo_red_dark" />

                    <TextView
                        android:id="@+id/tv_kalorie_procent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Panel biaek -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp"
                    android:background="@android:color/white"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/tvbialka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Biaka"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_spozyte_bialka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 g"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <ProgressBar
                        android:id="@+id/progress_bialka"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/holo_green_dark" />

                    <TextView
                        android:id="@+id/tv_bialka_procent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Panel tuszczy -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp"
                    android:background="@android:color/white"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/tvtluszcze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Tuszcze"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_spozyte_tluszcze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 g"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <ProgressBar
                        android:id="@+id/progress_tluszcze"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/holo_blue_dark" />

                    <TextView
                        android:id="@+id/tv_tluszcze_procent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Panel wglowodan贸w -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp"
                    android:background="@android:color/white"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/tvwegle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Wgle"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_spozyte_weglowodany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 g"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <ProgressBar
                        android:id="@+id/progress_weglowodany"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/holo_orange_dark" />

                    <TextView
                        android:id="@+id/tv_weglowodany_procent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black"
        android:background="@color/white"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>