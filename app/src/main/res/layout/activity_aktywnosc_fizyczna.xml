<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Sekcja nagłówka -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="wróc do ekranu głownego"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wybierz poziom aktywności"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Opcje wyboru poziomu aktywności -->
        <RadioGroup
            android:id="@+id/rg_aktywnosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2C2C2C"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/rb_brak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brak"
                android:textSize="18sp"
                android:textColor="#A0A0A0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:buttonTint="#6200EE"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A0A087"
                android:textSize="15sp"
                android:text="(brak aktywności, praca siedząca)"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginVertical="8dp"/>

            <!-- Opcja Niska -->
            <RadioButton
                android:id="@+id/rb_niska"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Niska"
                android:textSize="18sp"
                android:textColor="#A0A0A0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:buttonTint="#6200EE"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A0A087"
                android:textSize="15sp"
                android:text="(praca siedząca, 1-2 treningi w tygodniu)"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginVertical="8dp"/>

            <!-- Opcja Średnia -->
            <RadioButton
                android:id="@+id/rb_srednia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Średnia"
                android:textSize="18sp"
                android:textColor="#A0A0A0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:buttonTint="#6200EE"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A0A087"
                android:textSize="15sp"
                android:text=" (praca siedząca, 3-4 treningi w tygodniu)"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginVertical="8dp"/>

            <!-- Opcja Wysoka -->
            <RadioButton
                android:id="@+id/rb_wysoka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wysoka"
                android:textSize="18sp"
                android:textColor="#A0A0A0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:buttonTint="#6200EE"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A0A087"
                android:textSize="15sp"
                android:text="(praca fizyczna, 5-6 treningów w tygodniu)"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#404040"
                android:layout_marginVertical="8dp"/>

            <!-- Opcja Wysoka -->
            <RadioButton
                android:id="@+id/rb_bardzo_wysoka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bardzo wysoka"
                android:textSize="18sp"
                android:textColor="#A0A0A0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:buttonTint="#6200EE"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A0A087"
                android:textSize="15sp"
                android:text="(zawodowi sportowcy, osoby codziennie trenujące)"/>
        </RadioGroup>


        <!-- Przycisk Zapisz -->
        <Button
            android:id="@+id/btn_zapisz_aktywnosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz"
            android:textColor="#FFFFFF"
            android:background="#6200EE"
            android:padding="12dp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
